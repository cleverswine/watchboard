@using WatchBoard.Services.Database.Entities
<tr id="admin-list-row-@(ListModel.Id)">
    <td colspan="2" class="ps-2">
        <form class="d-flex justify-content-between align-items-center" hx-put="/admin/boards/@(ListModel.BoardId)/lists/@(ListModel.Id)" hx-target="#admin-list-row-@(ListModel.Id)" hx-swap="outerHTML">
            <input type="text" class="form-control" name="ListName" value="@ListModel.Name"/>
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i></button>
        </form>
    </td>
</tr>

@code {
    [Parameter]
    public List ListModel { get; set; } = new();
}