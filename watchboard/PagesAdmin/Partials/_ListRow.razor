@using WatchBoard.Services.Database.Entities
<tr id="admin-list-row-@(ListModel.Id)">
    <td class="ps-4">
        <i class="bi bi-list-task"></i> @ListModel.Name
    </td>
    <td class="text-end">
        <button class="btn btn-link"><i class="bi bi-arrow-up"></i></button>
        <button class="btn btn-link"><i class="bi bi-arrow-down"></i></button>
        <button class="btn btn-link" hx-target="#admin-list-row-@(ListModel.Id)" hx-swap="outerHTML" hx-get="/admin/boards/@(ListModel.BoardId)/lists/@(ListModel.Id)/edit"><i class="bi bi-pencil-square"></i></button>
        <button class="btn btn-link link-danger"><i class="bi bi-trash"></i></button>
    </td>
</tr>

@code {
    [Parameter]
    public List ListModel { get; set; } = new();
}