@using WatchBoard.Services.Database.Entities
<tr id="admin-board-row-@(BoardModel.Id)">
    <td colspan="2" class="ps-2">
        <form class="d-flex justify-content-between align-items-center" hx-put="/admin/boards/@(BoardModel.Id)" hx-target="#admin-board-row-@(BoardModel.Id)" hx-swap="outerHTML">
            <input type="text" class="form-control" name="BoardName" value="@BoardModel.Name"/>
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i></button>
        </form>
    </td>
</tr>

@code {

    [Parameter]
    public Board BoardModel { get; set; } = new();

}