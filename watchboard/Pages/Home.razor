@using WatchBoard.Services.Database.Entities
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Watch Board</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.23/dist/full.min.css" rel="stylesheet" type="text/css"/>
    <link href="/css/app.css" rel="stylesheet" type="text/css"/>
</head>

<body>

<div class="navbar bg-base-300 border-b border-black">
    <div class="flex-1">
        @foreach (var board in Boards)
        {
            if (board.Id == SelectedBoard.Id)
            {
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M9.9997 15.1709L19.1921 5.97852L20.6063 7.39273L9.9997 17.9993L3.63574 11.6354L5.04996 10.2212L9.9997 15.1709Z"></path></svg>
            }
            <button class="btn btn-ghost text-l">@board.Name</button>
        }
    </div>
    <div class="flex-none">
        <div class="form-control">
            <label class="input input-sm input-bordered flex items-center gap-2">
                <svg w-6 h-6 xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M18.031 16.6168L22.3137 20.8995L20.8995 22.3137L16.6168 18.031C15.0769 19.263 13.124 20 11 20C6.032 20 2 15.968 2 11C2 6.032 6.032 2 11 2C15.968 2 20 6.032 20 11C20 13.124 19.263 15.0769 18.031 16.6168ZM16.0247 15.8748C17.2475 14.6146 18 12.8956 18 11C18 7.1325 14.8675 4 11 4C7.1325 4 4 7.1325 4 11C4 14.8675 7.1325 18 11 18C12.8956 18 14.6146 17.2475 15.8748 16.0247L16.0247 15.8748Z"></path></svg>
                <input type="text" class="grow" placeholder="Search"/>
            </label>
        </div>

    </div>
</div>

<form hx-post="/app/search" hx-target="#searchResults">
    <div class="form-control">
        <label class="input input-sm input-bordered flex items-center gap-2">
            <input type="text" class="grow" placeholder="Search" name="SearchName"/>
            <button class="btn" type="submit">go</button>
        </label>
    </div>
    <div id="searchResults"></div>
</form>

<div class="divider">Watching</div>

<div class="flex flex-wrap gap-4 ml-4">
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
</div>

<div class="divider">Queue</div>

<div class="flex flex-wrap gap-4 ml-4">
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
</div>

<div class="divider">Future</div>

<div class="flex flex-wrap gap-4 ml-4">
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
    <_Item></_Item>
</div>

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/htmx.org@2.0.4"></script>

</body>
</html>

@code {
    [Parameter] public List<Board> Boards { get; set; } = [];
    [Parameter] public Board SelectedBoard { get; set; } = new();
    [Parameter] public List<List> Lists { get; set; } = [];
}