@using WatchBoard.Database.Entities
<div style="width: 340px;" class="offcanvas offcanvas-start" tabindex="-1" id="searchDrawer" aria-labelledby="searchDrawerLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="searchDrawerLabel">Add a Movie/TV Show</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <form hx-post="/app/search" hx-target="#searchResults">
            <label class="form-label">Search for:</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SearchType" id="searchTypeMovies" value="@ItemType.Movie">
                <label class="form-check-label" for="searchTypeMovies">
                    Movies
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SearchType" id="searchTypeTv" value="@ItemType.Tv" checked>
                <label class="form-check-label" for="searchTypeTv">
                    TV Shows
                </label>
            </div>
            <div class="d-flex flex-row mt-3 mb-3">
                <input id="searchInput" class="form-control" type="search" name="SearchName" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </div>
        </form>
        <div id="searchResults"></div>
    </div>
</div>

